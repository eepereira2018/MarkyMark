


<h1>Products</h1>
  <% @products.each do |product| %>
    <% unless product.archived? %>
      <div class="card" style="width: 18rem; margin-bottom:1rem;">
  <div class="card-body">
    <h5 class="card-title"><%= product.title %> </h5>
    <%= image_tag product.image, style: 'width:15rem;' %>
    <p class="card-text">Stock: <%= product.stock %></p>
    <%= button_to "Add To Cart", products_put_in_cart_path(product), class: "btn btn-primary" %>
    <p class="card-text">description for <%= link_to product.title, product %> </p>
    
   
    
  </div>
</div>
    <% end %>
  <% end %>



<div class="card" style="width: 18rem; margin-bottom:1rem;">
  <div class="card-body">
<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @product.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
    <%= form.label :cost %><br>
    <%= form.number_field :cost %>
  </div>

  <div>
    <%= form.label :stock %><br>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @product.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </div>
<div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
</div>